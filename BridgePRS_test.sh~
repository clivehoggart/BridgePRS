    ~/BridgePRS/bin/BridgePRS.sh \
        --outdir
        --strand_check 1 \
        --pop1 eur \
        --pop2 EAS \
        --pop1_sumstats $dir/sumstats/EUR.chr \
        --pop2_sumstats $dir/sumstats/AFR.chr  \
        --pop1_bfile /sc/arion/projects/psychgen/ukb/usr/clive/ukb/imputed/chr \
        --pop1_test_data /sc/arion/projects/psychgen/projects/prs/cross_population_prs_development/quick_ridge/hapmap/phenotype/${pheno[$i]}/${pheno[$i]}-EUR-normal-trim.target \
        --pop1_ld_bfile $ld_bfile \
        --pop1_ld_ids /sc/arion/projects/psychgen/ukb/usr/clive/ukb/ld_ids.txt \
        --pop2_ld_bfile $ld_bfile \
        --pop2_ld_ids $eas_ld_ids \
        --pop2_test_data
        --pop2_valid_data
        --cov_names $cov_names \
        --pheno_name Phenotype \
        --by_chr 1 \
        --sumstats_snpID SNP \
        --sumstats_p P \
        --sumstats_beta beta.real \
        --sumstats_allele1 ALT \
        --sumstats_allele0 REF \
        --sumstats_n N \
        --sumstats_se SE \
        --sumstats_frq Frq \
        --n_cores 30 \
        --do_clump_pop1 0 \
        --do_est_beta_pop1 0 \
        --do_predict_pop1 0 \
        --do_est_beta_pop1_precision 0 \
        --do_est_beta_InformPrior 0 \
        --do_predict_pop2_stage2 1 \
        --do_clump_pop2 0 \
        --do_est_beta_pop2 0 \
        --do_predict_pop2 1 \
        --do_combine 1
